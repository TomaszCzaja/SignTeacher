<UserControl x:Class="SignTeacher.UI.View.DecisionMakerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SignTeacher.UI.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="46"/>
        </Grid.RowDefinitions>
        <Viewbox Height="200"
                 Width="200">
            <Border BorderThickness="{Binding BorderThickness, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    BorderBrush="Chartreuse">
                <Image Source="{Binding DisplayedImagePath, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Stretch="Fill"  Height="200" Width="200"/>
            </Border>
        </Viewbox>
        <Label Content="{Binding Message, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,10,10,0" Grid.Row="1" VerticalAlignment="Top" HorizontalContentAlignment="Stretch"/>
    </Grid>
</UserControl>
